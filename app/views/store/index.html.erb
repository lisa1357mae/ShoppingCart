<p id="notice"><%= notice %></p>

<!-- Header -->

<!-- Services -->
<section id="services">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading" style="color:black;font-size:500%;font-family:'Contrail One',cursive;">FeedBack Shopping App</h2>

        <img src="https://static.pexels.com/photos/290660/pexels-photo-290660.jpeg" class="img-fluid" alt="Responsive image">
        <h3 class="section-subheading text-muted">We have awesome stuff! Buy it now!</h3>

        <%= link_to new_user_path do %>
        <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit">Sign Up to Continue</button>
        <% end %>
        <%= link_to login_path do %>
        <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit">Login</button>
        <% end %>

      </div>
    </div>

    <br></br>
    <div class="row text-center">
      <div class="col-md-4">

        <%= link_to products_path do %>
        <span class="fa-stack fa-4x" style="color:red;">
          <i class="fa fa-circle fa-stack-2x text-primary" style="color:red;"></i>
          <i class="fa fa-shopping-cart fa-stack-1x fa-inverse fa-spinner fa-spin" style="color:black;"></i>
        </span>
        <% end %>

        <h4 class="service-heading">SHOP</h4>
        <p class="text-muted">Browse our awesome instrument selection</p>
      </div>
      <div class="col-md-4">

        <%= link_to carts_path do %>
        <span class="fa-stack fa-4x">
          <i class="fa fa-circle fa-stack-2x text-primary"></i>

          <i class="fa fa-shopping-cart fa-stack-1x fa-inverse fa-spinner fa-spin" style="color:black;"></i>
        </span>
        <% end %>

        <h4 class="service-heading">CART</h4>
        <p class="text-muted">View your cart</p>
      </div>
      <div class="col-md-4">

        <%= link_to login_path do %>
        <span class="fa-stack fa-4x">
          <i class="fa fa-circle fa-stack-2x text-primary"></i>
          <i class="fa fa-shopping-cart fa-stack-1x fa-inverse fa-spinner fa-spin" style="color:black;"></i>
        </span>
        <% end %>
        <h4 class="service-heading">CHECKOUT</h4>
        <p class="text-muted">Easy checkout</p>
      </div>
    </div>
  </div>
</section>
