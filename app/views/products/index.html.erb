<%= notice %>


  <h1 class= "section-heading" style="color:orange;font-size:500%;font-family:'Contrail One',cursive;">Products</h2>

<table>
  <th>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.description %></td>
      <td><%= product.image_url %></td>P
      <td><%= product.price %></td>
      <td><%= link_to 'Show', product %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Destroy', product, method: :delete %></td>
      <td><%= button_to 'Add to Cart', line_items_path(product_id: product) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

