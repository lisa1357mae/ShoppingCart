
  <h1 class= "section-heading" style="color:orange;font-size:500%;font-family:'Contrail One',cursive;">Login</h1>




<div class= "form-group" >
<%= form_tag sessions_path do %>
<div class= "form-group" >

    <h2>Email</h2>
     <div style="height: 40px; width: 150px; margin-bottom: 5px">
  <%= email_field_tag :email, params[:email],
  class: "form-control" %>
</div>
</div>

<div class="form-group" >
  <% label_tag :Password %>
  <h2>Password</h2>
  <div style="height: 40px; width: 150px; margin-bottom: 5px">
  <%= password_field_tag :password, nil,
  class: "form-control" %>
</div>
</div>

<%= submit_tag "Log In", class: "btn btn-primary" %>
<% end %>
</div>
