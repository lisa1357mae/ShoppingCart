
  <h1 class= "section-heading" style="color:orange;font-size:500%;font-family:'Contrail One',cursive;">Login</h1>




<div class= "form-group">
<%= form_tag sessions_path do %>
<div class= "form-group">

    <h2>Email</h2>
  <%= email_field_tag :email, params[:email],
  class: "form-control" %>
</div>

<div class="form-group" >
  <% label_tag :Password %>
  <h2>Password</h2>
  <%= password_field_tag :password, nil,
  class: "form-control" %>
</div>

<%= submit_tag "Log In", class: "btn btn-primary" %>
<% end %>
</div>
